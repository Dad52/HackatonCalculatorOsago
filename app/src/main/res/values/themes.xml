<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SravniRuHackathon" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/MainBlue</item>
        <item name="colorPrimaryVariant">@color/MainBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>-->
        <item name="android:statusBarColor">@color/MainGray</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="TextStyle" parent="Theme.SravniRuHackathon">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/MainHintTextColor</item>
    </style>

    <style name="ButtonStyle" parent="TextStyle">

        <item name="android:backgroundTint">@drawable/selector_bgtint_button_enabled</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@drawable/selector_textcolor_button_enabled</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">@dimen/margin16</item>
    </style>

    <style name="ValueStyle" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/MainTitleTextDark100</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.CardView.Filled">
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/MainGray</item>
        <item name="background">@drawable/shape_corner_radius_12</item>
    </style>

    <style name="inputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/MainTitleTextDark100</item>
        <item name="android:textColorHint">@color/MainLightGrayDark30</item>
        <item name="hintTextColor">@color/MainBlue</item>
        <item name="boxStrokeColor">@color/MainBlue</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
    </style>

    <style name="inputWithoutTouchStyle" parent="ValueStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLength">40</item>
        <item name="android:maxLines">2</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:background">@drawable/shape_corner_radius_12</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="colorPrimary">@color/MainBlue</item>
        <item name="colorPrimaryVariant">@color/MainBlue</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="behavior_peekHeight">400dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

</resources>